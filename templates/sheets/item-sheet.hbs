<form class="{{cssClass}} item-sheet" autocomplete="off">

    <h1 class="eb-item-n">
        <input name="item" type="text" value="{{item.name}}" data-field="system.item" data-action="item.inlineedit"
            data-action-event="change" placeholder="{{localize 'EB.Item.Name'}}"
            class="eb-item-input inline-item-edit" />
    </h1>


    {{!-- MAIN STATS --}}
    <div class="eb-main-stat-wrapper">

        {{!-- QUANTITY --}}
        <div class="eb-main-stat eb-quantity resource flexrow flex-group-center">
            <div class="flexcol">
                <label for="data.quantity" class="resource-label">{{localize 'EB.Item.Quantity'}}</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="number" name="system.quantity" value="{{systemData.quantity}}" data-dtype="Number"
                        data-field="system.quantity" data-action="item.inlineedit" data-action-event="change"
                        class="eb-item-input inline-item-edit" />
                </div>
            </div>
        </div>

        {{!-- NUMBER OF USES --}}
        <div class="eb-main-stat eb-number-of-uses resource flexrow flex-group-center">
            <div class="flexcol">
                <label for="data.numberOfUses" class="resource-label">{{localize 'EB.Item.NumberOfUses'}}</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="number" name="system.numberOfUses" value="{{systemData.numberOfUses}}"
                        data-field="system.numberOfUses" data-action="item.inlineedit" data-action-event="change"
                        data-dtype="Number" class="eb-item-input inline-item-edit" />
                </div>
            </div>
        </div>

        {{!-- BULKY --}}
        <div class="eb-main-stat eb-bulky resource flexrow flex-group-center">
            <div class="flexcol">
                <label class="resource-label">{{localize 'EB.Item.Bulky'}}</label>
                <input type="checkbox" {{checked systemData.bulky}} name="system.bulky" data-field="system.bulky"
                    data-action="item.inlineedit" data-action-event="change" value="{{systemData.bulky}}"
                    data-dtype="Boolean" class="checkbox-block eb-item-input inline-item-edit" />
            </div>
        </div>

        {{!-- ARMOR --}}
        <div class="eb-main-stat eb-armor resource flexrow flex-group-center">
            <div class="flexcol">
                <label for="data.armor" class="resource-label">{{localize 'EB.Item.Armor'}}</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="number" name="system.armor" value="{{systemData.armor}}" data-dtype="Number"
                        data-field="system.armor" data-action="item.inlineedit" data-action-event="change"
                        class="eb-item-input inline-item-edit" />
                </div>
            </div>
        </div>

        {{!-- DAMAGE --}}
        <div class="eb-main-stat eb-damage-formula resource flexrow flex-group-center">
            <div class="flexcol">
                <label for="data.damageFormula" class="resource-label">{{localize 'EB.Item.Damage'}}</label>
                <div class="resource-content flexrow flex-center flex-between">
                    <input type="text" name="system.damageFormula" value="{{systemData.damageFormula}}"
                        data-field="system.damageFormula" data-dtype="String"
                        placeholder="{{localize 'EB.Item.DamagePlaceholder'}}" data-action="item.inlineedit"
                        data-action-event="change" class="eb-item-input inline-item-edit" />
                </div>
            </div>
        </div>

    </div>


    {{!-- Sheet Body --}}
    <section class="sheet-body eb-card eb-notice-wrapper">

        <h3>{{localize 'EB.Sheet.Notices'}}</h3>

        {{!-- DESCRIPTION --}}
        <div class="eb-description">
            <div class="grow-wrap" data-replicated-value="{{systemData.description}}">
                <textarea id="description" name="system.description" data-field="system.description"
                    onInput="this.parentNode.dataset.replicatedValue = this.value"
                    placeholder="{{localize 'EB.Item.Description'}}" data-action="item.inlineedit"
                    data-action-event="change"
                    class="eb-item-input inline-item-edit">{{systemData.description}}</textarea>
            </div>
        </div>

    </section>


</form>